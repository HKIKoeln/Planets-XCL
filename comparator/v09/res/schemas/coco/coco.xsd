<xs:schema 	xmlns="http://www.planets-project.eu/xcl/schemas/xcl"
    xmlns:xs="http://www.w3.org/2001/XMLSchema" 
    xmlns:xcdl="http://www.planets-project.eu/xcl/schemas/xcl"   
    targetNamespace="http://www.planets-project.eu/xcl/schemas/xcl"
    elementFormDefault="qualified"
    version="1.0" 
    xml:lang="en" >
    
    <xs:include schemaLocation="../xcdl/XCDLBasicTypes.xsd"/>
    
    <!--********************************** coco section  (root element)********************************************* -->
    <xs:element name="coco">
        <xs:annotation>
            <xs:documentation>
               Root element for comparison configuration description.
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:complexContent>
                <xs:extension base="cocoType"/>
            </xs:complexContent>
        </xs:complexType>
    </xs:element>
    <!-- ............complex type:  cocoType ................. -->
    <xs:complexType name="cocoType">
        <xs:annotation>
            <xs:documentation>
                see specification for description.
            </xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element ref="compSet" minOccurs="1" maxOccurs="unbounded">
                <xs:annotation>
                    <xs:documentation>                      
                    </xs:documentation>
                </xs:annotation>
            </xs:element>
        </xs:sequence>       
    </xs:complexType>
    <!-- *****************************  compSet section (child of: 'coco')  *********************************************** -->
    <xs:element name="compSet">
        <xs:annotation>
            <xs:documentation>              
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:sequence>                
                <xs:element ref="property" minOccurs="1" maxOccurs="unbounded"/>                
            </xs:sequence>           
        </xs:complexType>
    </xs:element>    
    <!-- ************************  Property section (child of: 'compSet')  ******************************* -->
    <xs:element name="property">
        <xs:annotation>
            <xs:documentation>               
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="metric" minOccurs="1" maxOccurs="unbounded"/>                
            </xs:sequence>
            <xs:attribute name="id" type="xs:int" use="required"/>
            <xs:attribute name="name" type="xs:string" use="required"/>            
        </xs:complexType>
    </xs:element>
    <!-- ****************** metric section (child of: 'property') **************************  -->
    <xs:element name="metric">
        <xs:annotation>
            <xs:documentation>             
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:attribute name="id" type="xs:int" use="required"/>
            <xs:attribute name="name" type="xs:string" use="required"/>
            <xs:attribute name="param" type="xcdl:unionType02Type" use="optional"/>
        </xs:complexType>
    </xs:element>
</xs:schema>    
    
    
    
    
    
    
    
    
    