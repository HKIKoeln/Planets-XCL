    <w:body>
        <w:p w:rsidR="00BE0418" w:rsidRPr="00A50F99" w:rsidRDefault="00A50F99">
            <w:pPr>
                <w:rPr>
                    <w:sz w:val="18"/>
                    <w:szCs w:val="18"/>
                </w:rPr>
            </w:pPr>
            <w:r w:rsidRPr="00A50F99">
